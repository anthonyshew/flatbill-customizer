{
  "name": "fb-customizer",
  "version": "0.1.0",
  "description": "Flatbill Baseball Product Customizer",
  "engines": {
    "node": "13.x",
    "npm": "6.x"
  },
  "scripts": {
    "start": "node server",
    "ngrok": "cd .. && ngrok http 3000 -host-header=\"localhost:3000\"",
    "dev": "concurrently --kill-others-on-fail \" cd server && nodemon index.js \" \" cd client && npm run start \"",
    "build": "cd client && npm install && npm run build"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "dotenv": "^8.2.0",
    "@sendgrid/mail": "^6.5.4",
    "@stripe/react-stripe-js": "^1.0.3",
    "@stripe/stripe-js": "^1.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mailchimp-api-v3": "^1.13.1",
    "nodemailer": "^6.4.5",
    "pg": "^7.18.2",
    "stripe": "^8.32.0",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^2.0.0"
  }
}
